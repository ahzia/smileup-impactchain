# Vercel Environment Variables Template
# Copy these variables to your Vercel project dashboard
# Replace the placeholder values with your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"

# JWT Authentication
JWT_ACCESS_SECRET="your_jwt_access_secret_key_here"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key_here"

# Hedera Blockchain Configuration
HEDERA_OPERATOR_ID="0.0.123456"
HEDERA_OPERATOR_PRIVATE_KEY="your_hedera_operator_private_key_here"
HEDERA_SMILES_TOKEN_ID="0.0.789012"
HEDERA_NETWORK="testnet"

# Wallet Encryption
WALLET_ENCRYPTION_KEY="your_wallet_encryption_key_here"

# DialogFlow (Optional - for AI chat)
NEXT_PUBLIC_DIALOGFLOW_API_KEY="your_dialogflow_api_key_here"

# WalletConnect (Optional - for external wallet integration)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your_wallet_connect_project_id_here"

# Additional Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app" 